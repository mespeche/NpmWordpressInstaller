{
  "initVars": [
    {
      "type" : "input",
      "name" : "directory",
      "message" : "Where do you want to install your new Wordpress project ? :",
      "default" : "wordpress"
    },
    {
      "type" : "input",
      "name" : "locale",
      "message" : "Select which language you want to download :",
      "default" : "en_US"
    }
  ],

  "configVars" : [
    {
      "type" : "input",
      "name" : "dbname",
      "message" : "Database :",
      "default" : "wordpress"
    },
    {
      "type" : "input",
      "name" : "dbuser",
      "message" : "User :",
      "default" : "root"
    },
    {
      "type" : "password",
      "name" : "dbpass",
      "message" : "Password :"
    },
    {
      "type" : "input",
      "name" : "dbhost",
      "message" : "Host :",
      "default" : "localhost"
    },
    {
      "type" : "input",
      "name" : "dbprefix",
      "message" : "Prefix :"
    },
    {
      "type" : "input",
      "name" : "dbcharset",
      "message" : "Charset :",
      "default" : "utf8"
    }
  ],

  "installVars" : [
    {
      "type" : "input",
      "name" : "url",
      "message" : "Your website url :"
    },
    {
      "type" : "input",
      "name" : "title",
      "message" : "Your website title :"
    },
    {
      "type" : "input",
      "name" : "admin_user",
      "message" : "Your admin username :"
    },
    {
      "type" : "password",
      "name" : "admin_password",
      "message" : "Your admin password :"
    },
    {
      "type" : "input",
      "name" : "admin_email",
      "message" : "Your admin email address :"
    }
  ],

  "installPluginsQuestion" : [
    {
      "type" : "confirm",
      "name" : "installPlugins",
      "message" : "Do you want to install some plugins ? :"
    }
  ],

  "installPluginsList" : [
    {
      "type" : "checkbox",
      "name" : "pluginsList",
      "message" : "Select wich plugin you want to install :",
      "choices" : ["wordpress-seo", "fakerpress"]
    }
  ]
}
